post_install() {
    echo "you need to have a config file (/etc/masqmail/masqmail.conf) that contains something like this:"
    echo "host_name=\"HOSTNAME\""
    echo "local_hosts=\"localhost;HOSTNAME\""
    echo "listen_addresses=\"localhost:25\""
    echo "spool_dir=\"/var/spool/masqmail\""
    echo "mail_dir=\"/var/mail\""
    echo "log_dir=\"/var/log/masqmail\""
}
